<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.matches.NewGameFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="114dp"
        app:layout_constraintGuide_percent="0.2" />

    <Button
        android:id="@+id/homebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/friendsbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Friends"
        app:layout_constraintStart_toStartOf="@+id/AppNameTextView2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/AppNameTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Create Match"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/homebtn"
        app:layout_constraintTop_toBottomOf="@+id/homebtn" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginEnd="13dp"
        android:text="NÂ° of Players"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/button2"
        app:layout_constraintEnd_toStartOf="@+id/button2"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginEnd="9dp"
        android:text="2"
        app:layout_constraintBaseline_toBaselineOf="@+id/button3"
        app:layout_constraintEnd_toStartOf="@+id/button3"
        app:layout_constraintStart_toEndOf="@+id/textView2" />

    <Button
        android:id="@+id/button3"
        android:layout_width="0dp"
        android:layout_height="38dp"

        android:layout_marginTop="107dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="109dp"
        android:text="3"
        app:layout_constraintBottom_toBottomOf="@+id/textView4"
        app:layout_constraintEnd_toStartOf="@+id/button4"
        app:layout_constraintStart_toEndOf="@+id/button2"
        app:layout_constraintTop_toTopOf="@+id/AppNameTextView2" />

    <Button
        android:id="@+id/button4"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginEnd="9dp"
        android:text="4"
        app:layout_constraintBottom_toBottomOf="@+id/button3"
        app:layout_constraintEnd_toStartOf="@+id/button5"
        app:layout_constraintStart_toEndOf="@+id/button3"
        app:layout_constraintTop_toTopOf="@+id/button3" />

    <Button
        android:id="@+id/button5"
        android:layout_width="0dp"
        android:layout_height="38dp"

        android:layout_marginEnd="60dp"
        android:text="5"
        app:layout_constraintBaseline_toBaselineOf="@+id/button4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button4" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        android:text="Invite Friends"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonAddPlayer1"
        app:layout_constraintEnd_toStartOf="@+id/buttonAddPlayer1"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonAddPlayer5"
        android:layout_width="49dp"
        android:layout_height="38dp"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="184dp"
        android:text="+"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/button4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/friendsbtn" />

    <Button
        android:id="@+id/buttonAddPlayer2"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginEnd="88dp"
        android:text="+"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonAddPlayer1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonAddPlayer1" />

    <Button
        android:id="@+id/buttonAddPlayer3"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginTop="75dp"
        android:layout_marginBottom="75dp"
        android:text="+"
        app:layout_constraintBottom_toBottomOf="@+id/buttonAddPlayer5"
        app:layout_constraintEnd_toEndOf="@+id/buttonAddPlayer1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/buttonAddPlayer1"
        app:layout_constraintTop_toTopOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonAddPlayer4"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:text="+"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonAddPlayer3"
        app:layout_constraintEnd_toEndOf="@+id/buttonAddPlayer2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/buttonAddPlayer2" />

    <Button
        android:id="@+id/buttonAddPlayer1"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="260dp"
        android:text="+"
        app:layout_constraintBottom_toTopOf="@+id/createGamebtn"
        app:layout_constraintEnd_toStartOf="@+id/buttonAddPlayer2"
        app:layout_constraintStart_toEndOf="@+id/textView4" />

    <Button
        android:id="@+id/createGamebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="37dp"
        android:text="Create Match"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>